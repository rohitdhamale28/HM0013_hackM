<% layout("/layouts/boilerplate") %>
<!-- this is the boilerplate imported using ejs-mate -->
<body>
    <br>
    <br>
    <div class="row">
        <div class="col-8 offset-2">

       
    <h3>Edit Your Course </h3>
    <form method="POST" action="/courses/<%= editCourses._id  %>?_method=PUT" class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="course[title]" class="form-control" id="title"  value="<%= editCourses.title  %>" required>    
        </div>
        <br>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="course[description]" class="form-control" id="description" cols="30" rows="10" required><%= editCourses.description %></textarea>
        </div>
        <br>
        <div class="mb-3">
            <img src="<%= editCourses.image.url %>" alt="">
        </div>
        <br>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="course[image]" id="image" class="form-control" >
        </div>
        <br>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="course[price]" class="form-control" id="price" value="<%= editCourses.price %>" required>
        </div>
         <br>
         <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="course[location]" class="form-control" id="location" value="<%= editCourses.location %>" required>
        </div>
        <br>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="course[country]" class="form-control" id="country" value="<%= editCourses.country %>" required>
        </div>
        <br>
        <button class="btn btn-dark">Edit</button>
        

    </form>
</div>
</div>
<script src="/js/script.js"></script>

</body>
